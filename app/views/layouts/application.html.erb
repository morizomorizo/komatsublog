<!DOCTYPE html>
<html>
  <head>
    <title>Komatsublog</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div>
      <% if session[:user_id] %>
      <%= button_to 'logout', logout_path, method: :delete %>
      <% end %>
    </div>

    <div>
      <%= yield %>
    </div>

  </body>
</html>
